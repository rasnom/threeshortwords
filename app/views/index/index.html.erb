<h1> Three Short Words </h1>

<div class='search-container'>
  <form action='/' method='get'>
    Word: <input type='text' name='first_word' value='<%= @first_word %>'><br>
    Word: <input type=text' name='second_word' value='<%= @second_word %>'><br>
    <input type='submit' value='Submit'>
  </form>
</div>

<div class='results-container'>
  <ul>
    <% @results.each do |result| %>
      <li> <%= result %> </li>
    <% end %>
  </ul>
</div>
